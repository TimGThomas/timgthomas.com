<main>
  <% var firstpost = page.posts.first(); %>
  <h1><%= firstpost.title %></h1>
  <%- firstpost.content %>
  <nav>
    <span class="post-nav-prev"></span>
    <span class="post-nav-next">
      <% var nextpost = page.posts.skip(1).limit(1).first() %>
      <a href="<%- url_for(nextpost.path) %>"><%= nextpost.title %></a>
    </span>
  </nav>
</main>

<%- partial('_partial/comments', { post: page }) %>
