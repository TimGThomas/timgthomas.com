main
  display block
  max-width 40.0rem
  margin-top 110px

  h1, h2
    font-weight 300
    text-align center
    text-transform uppercase

  h1
    font-size 1.5rem
    letter-spacing 0.1rem
    line-height: 1.236
    margin-bottom 0.6rem
    padding 0 1.8rem

  h2, p, ol, ul, dl, pre, blockquote, iframe
    color rgba(black, 0.67)
    font-size 1.1rem
    line-height 1.618
    margin-bottom 0.6rem

  h2
    color purple
    letter-spacing 0.075rem
    margin 1.2rem 0

  p
    text-align justify
    text-rendering optimizeLegibility

  ol, ul
    margin-left 2.4rem

  pre, blockquote
    border-left 0.2rem solid darken(alabaster, 10%)
    margin-left 1.2rem
    padding-left 0.6rem

  img, iframe
    display block
    max-width 30.0rem
    margin-left auto
    margin-right auto

  iframe
    min-height 15.0rem
    width 100%
