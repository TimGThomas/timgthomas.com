main
  display block
  max-width 40.0rem
  margin-top 110px

  h1, h2, h3
    font-weight 300
    text-align center
    text-transform uppercase

  h1
    font-size 1.5rem
    letter-spacing 0.1rem
    line-height: 1.236
    margin-bottom 0.6rem
    padding 0 1.8rem

  h2, h3, p, ol, ul, dl, pre, blockquote, iframe
    color mix(black, alabaster, 65%)
    font-size 1.1rem
    line-height 1.618
    margin-bottom 0.6rem

  h2
    color purple
    letter-spacing 0.075rem
    margin 1.2rem 0

  h3
    text-align left

  p
    text-align justify
    text-rendering optimizeLegibility

  ol, ul
    margin-left 2.4rem

  dl
    font-size 0.9rem
    margin-bottom 1.2rem

  dd, blockquote, blockquote p, figcaption
    color mix(black, alabaster, 45%)
    font-size 0.9rem
    font-style italic
    margin-bottom 0.6rem
    margin-left 0.6rem
    margin-right 0.6rem

  figcaption
    font-size 0.7rem
    margin 0.3rem 0.6rem 0.6rem
    text-align center

  pre, blockquote
    border-left 0.2rem solid darken(alabaster, 10%)
    margin-left 1.2rem
    padding-left 0.6rem

  pre, code
    font-family 'Fira Mono'
    font-size 0.9rem

  img, iframe
    display block
    max-width 30.0rem
    margin-left auto
    margin-right auto

  img
    border-radius 0.5rem
    box-shadow 0 0.2rem darken(alabaster, 10%)

  iframe
    min-height 15.0rem
    width 100%
