<section role="main">
<div class="g-left s-blog">
   <article>
      <header>
         <h1><%= page.title %> <small><%= date(page.date, config.date_format) %></small></h1>
      </header>
      <%- page.content %>
   </article>
   <aside>
      <header>
         <h1>Comments <small>Provided by Disqus</small></h1>
      </header>
      <div id="disqus_thread"></div>
      <script type="text/javascript">
         /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
         var disqus_shortname = 'timgthomas'; // required: replace example with your forum shortname
         var disqus_identifier = 'http://timgthomas.com{{ page.url }}';

         /* * * DON'T EDIT BELOW THIS LINE * * */
         (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
         })();
      </script>
      <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
      <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
   </aside>
</div>
<aside class="g-right sticky">
   <header><h1>Recent Posts</h1></header>
   <ol class="list-icons list-banded">
      <% site.posts.sort('date', -1).limit(4).each(function(post, i) { %>
        <li>
          <a href="/<%= post.path %>">
            <i class="icon icon-bookmark-empty"></i>
            <span class="title title-full"><%= post.title %></span>
            <small class="subtitle"><%= date(post.date, config.date_format) %></small>
          </a>
        </li>
      <% }); %>
      <li>
         <a href="/archives">
            <i class="icon icon-book"></i>
            <span class="title title-full">View the Archives</span>
            <small class="subtitle">Read all <%- site.posts.length %> posts</small>
         </a>
      </li>
      <li>
         <a href="http://feeds.feedburner.com/timgthomas">
            <i class="icon icon-rss"></i>
            <span class="title title-full">Subscribe to Updates</span>
            <small class="subtitle">Read future posts</small>
         </a>
      </li>
   </ol>
</aside>
</section>
