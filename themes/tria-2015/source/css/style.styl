// import 'nib'

alabaster = rgb(241, 242, 237)
blackrock = rgb( 49,  46,  63)

shade     = mix(black, alabaster, 25%)
shadow    = mix(black, alabaster)
aqua      = rgb( 53, 171, 165)
dark-aqua = rgb(  0, 135, 127)
orange    = rgb(248, 142,  41)
purple    = rgb(182,  81, 154)

*
  box-sizing inherit
  margin 0
  padding 0

  line-height inherit

  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-tap-highlight-color transparent

html
  box-sizing border-box
  font-size 62.5%
  line-height 1

body
  padding-top 72px
  background-color alabaster
  font-family 'Fira Sans'
  font-weight 200

[role='banner']
  padding 0 16px
  position fixed
  top 0
  width 100%
  z-index 1

  background-color alabaster
  box-shadow 0 4px rgba(black, 15%)

  h1
    box-sizing border-box
    margin 0 auto
    // margin-left 16px
    padding-left 52px
    padding-top 4px
    position relative
    max-width 720px

    background-image url('../images/logo.png')
    background-repeat no-repeat
    background-position left center
    background-size 38px 44px

    color shadow
    font-size 2.4rem
    font-weight 300
    line-height 68px
    text-transform uppercase

    &:after
      content ''
      display block
      position absolute
      height 18px
      width 52px
      left -6px

      background-image url('../images/logo-chevron.png')
      background-size 52px 18px

    a
      color currentColor
      text-decoration none

  em
    color currentColor
    font-style inherit
    animation hues 30s infinite linear

aside
  box-sizing border-box
  height 164px
  margin-bottom 16px
  padding 24px 8px 16px
  overflow hidden

  background-color blackrock
  color alabaster

  .container
    margin 0 auto
    max-width 700px

  p
    margin 0 auto
    position relative
    width 200px

    font-size 1.6rem
    font-weight 300
    line-height 2.4rem
    text-align center

    @media screen and (min-width: 360px)
      padding-right 160px
      width 360px

      &:first-of-type:before
        content ''
        display block
        position absolute
        width 160px
        height 176px
        top -30px
        right -16px

        background-image url('../images/headshot.png')
        background-size 160px 176px

    @media screen and (min-width: 512px)
      float right
      width 480px

      & + p
        text-align right

  p + p
    margin-top 8px

  a
    display inline-block
    height 44px
    width 40px
    margin 0 8px

    background-image url('../images/link.png')
    background-size 40px 44px

    color currentColor
    line-height 44px
    text-align center
    text-decoration none

    &:hover
      svg
        fill white

    &:active
      svg
        fill white
      .icon
        fill blackrock
      .fill
        fill white

  svg
    fill shade

    &,
    *
      transition fill 200ms

  .fill
    fill transparent

[role='main']
  margin 0 auto
  padding 16px
  max-width 800px

  font-size 1.8rem
  line-height 2.8rem

  header
    padding-left 12px

    background-image url('data:image/png;base64,')
    background-position left 1px
    background-repeat no-repeat
    background-size 8px 21px

    p
      color tint(black, 65%)
      font-size 1.4rem
      font-style oblique

    h1
      color tint(black, 33%)
      font-size 2.4rem
      font-weight 200
      text-transform uppercase

  p
    color mix(black, alabaster, 65%)
    font-size 1.8rem

  p,
  pre
    margin-bottom 16px

  pre
    overflow-x auto
    -webkit-overflow-scrolling touch

    font-size 1.4rem
    line-height 2.0rem

.toast
  position fixed
  bottom 0
  width 100%

  background-color rgba(alabaster, 90%)
  box-shadow 0 -4px rgba(black, 15%)

a
  color aqua
  transition color 0.2s
  &:hover
    color dark-aqua

@import '_content'
@import '_code'

@keyframes hues
  0%
    color shade
  16.5%
    color aqua
  33%
    color shade
  50%
    color orange
  67%
    color shade
  83.2%
    color purple
  100%
    color shade
