<h1>Recent Posts</h1>
<ol>
  <% for (let post of site.posts.data.slice(-3).reverse()) { %>
    <li class="post">
      <a href="<%= url_for(post.path) %>">
        <h2><%= post.title %></h2>
        <p class="excerpt"><%= strip_html(post.excerpt) %></p>
      </a>
    </li>
  <% } %>
</ol>
<% let featuredProjects = site.data.projects.filter(p => p.featured) %>
<% if (featuredProjects.length) { %>
  <h1>Featured Projects</h1>
  <ul class="projects">
    <% for (let project of featuredProjects) { %>
      <li>
        <a href="<%= url_for('projects') %>">
          <h2><%= project.name %></h2>
          <p class="excerpt"><%= project.description %></p>
        </a>
      </li>
    <% } %>
  </ul>
<% } %>
